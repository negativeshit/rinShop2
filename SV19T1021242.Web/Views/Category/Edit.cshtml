@model SV19T1021242.DomainModels.Category
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="CategoryID" value="@Model.CategoryId" />
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="categoryName" value="@Model.CategoryName" autofocus>
            </div>

            <div class="form-group">
                <label>Tên mô tả:</label>
                <input type="text" class="form-control" name="description" value="@Model.Description">
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>

    </div>

</div>
