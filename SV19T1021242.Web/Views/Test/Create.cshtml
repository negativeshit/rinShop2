@model SV19T1021242.Web.Models.Person

@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="post">
            <input type="hidden" name="CategoryID" value="" />
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name" autofocus>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <input  type="hidden class="form-control" name="BirthDate" value="@Model.BirthDate"/>
                <div class="col-sm-10">
                   
                    <input type="text" class="form-control date-picker" name="BirthdateInput" value="@Model.BirthDate.ToString("dd/MM/yyyy",new System.Globalization.CultureInfo("en-GB"))"  />
                </div>
            </div>

            <div class="form-group">
                <label>Tên mô tả:</label>
                <input type="text" class="form-control" name="Salary" value="@Model.Salary">
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>

    </div>

</div>