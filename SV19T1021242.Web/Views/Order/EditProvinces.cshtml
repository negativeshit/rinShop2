@model SV19T1021242.DomainModels.Order
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form id="formProvinces" action="~/Order/EditProvinces/@ViewBag.OrderID" method="post">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chỉnh sửa thông tin địa chỉ đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Tỉnh/Thành</label>
                    @Html.DropDownListFor(m => m.DeliveryProvince, SelectListHelper.Provinces(), new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="control-label">Địa chỉ nhận hàng:</label>
                    <div>
                        <input type="text" class="form-control" name="deliveryAddress" value="" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>
<script>$(document).ready(function () {
    $('#formProvinces').submit(function (e) {
            e.preventDefault();

            var url = $(this).prop("action");
            var method = $(this).prop("method");
            var postData = $(this).serializeArray();

            $.ajax({
                url: url,
                type: method,
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    if (data !== "") {
                        $("#message").html(data);
                    }
                    else {
                        location.reload();
                    }
                }
            });
            return;

        });
    });</script>