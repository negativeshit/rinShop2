@model ProductSearchInput
@{
    ViewBag.Title = "Quản lý mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập đầu vào tìm kiếm -->
        <form id="formSearch" action="~/Product/Search" method="get" data-container="#searchResult">
            <div class="row">
                <div class="col-sm-3">
                  
                    @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.SelectCategories(), new { @class = "form-control select2" })
                </div>
                <div class="col-sm-3">
                  
                    @Html.DropDownListFor(m => m.SupplierID, SelectListHelper.SelectSuppliers(), new { @class = "form-control select2" })
                </div>
                <div class="col-sm-6 input-group">
                    <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize" />
                    <input name="searchValue" type="text" class="form-control" value="@Model.SearchValue"
                           placeholder="Nhập tên mặt hàng">
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left:5px">
                            <i class="fa fa-plus"></i>Bổ sung
                        </a>
                    </div>

                </div>
            </div>


        </form>

        <!-- Hiển thị kết quả tìm kiếm -->

        <div id="searchResult">

        </div>

    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function (e) {
            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(this, 1);
                return;
            });
            doSearch("#formSearch", @Model.Page);
        });
        function doSearch(formSearchInput, page) {
            var action = $(formSearchInput).prop("action");
            var method = $(formSearchInput).prop("method");
            var container = $(formSearchInput).data("container");
            var postData = $(formSearchInput).serializeArray();
            postData.push({
                "name": "page", "value": page
            });

            $.ajax({
                url: action,
                type: method,
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $(container).html(data);
                }
            });
            return;
        }
    </script>
}