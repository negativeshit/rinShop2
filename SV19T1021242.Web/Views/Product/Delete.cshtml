@model SV19T1021242.DomainModels.Product 
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Xoá mặt hàng";
}

<div class="box box-primary">

    <div class="box-header with-border ">
        <h3 class="box-title">Thông tin mặt hàng</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="#" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <p class="form-control-static">@Model.ProductName</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <p class="form-control-static">@Model.ProductDescription</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng:</label>
                <p class="form-control-static" value ="@SV19T1021242.BusinessLayers.CommonDataService.GetCategory(Model.CategoryId).CategoryName"></p>
            </div>

           

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <p class="form-control-static">@Model.Unit</p>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <p class="form-control-static">@Model.Price</p>
            </div>

          

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-lg-offset-2 col-sm-10">
                
                    <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

           

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (!ViewBag.AllowDelete)
                    {


                        <button type="submit" class="btn btn-danger" disabled>
                            <i class="fa fa-trash"></i>
                            Xác nhận xóa
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                            Xác nhận xóa
                        </button>
                    }

                    <a class="btn btn-default" href="~/Product">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>

</div>